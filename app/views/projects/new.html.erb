<div class="row collapse">
	<h1>New Project</h1>
</div>

<%= form_for :project, url: projects_path do |f| %>
<% if @project.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@project.errors.count, "error")%> prohibited this project from being saved:</h2>
	<ul class='error'>
		<% @project.errors.full_messages.each do |msg|%>
		<li class='error'>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="row">
	<div class='large-5'>
		<div class="row collapse">
			<div class="large-4 columns">
				<%= f.label :project_name, class: 'right-inline'  %>
			</div>
			<div class="large-6 columns">
				<%= f.text_field :projectname %>
			</div>
		</div>

		<div class="row collapse">
			<div class="large-3 columns">
				<%= f.label :teamleader, class: 'right-inline'  %>
			</div>
			<div class="large-6 columns">
				<%= f.text_field :teamleader %>
			</div>
		</div>

		<div class="row collapse">
			<div class="large-3 columns">
				<%= f.label :client, class: 'right-inline'  %>
			</div>
			<div class="large-6 columns" class='dropdown'>
				<%= f.select :client, [['UEMS',1], ['NGV',2], ['iClick',3]] , {:include_blank => 'Select'}%>
			</div>
		</div>
		<div class="row collapse">
			<div class="large-4 large-offset-8 columns">
				<%= f.submit 'Submit', class: 'tiny button radius' %>
			</div>
		</div>
	</div>
</div>

<%end%>
<%= link_to 'Back', projects_path %>

